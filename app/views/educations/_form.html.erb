<%= form_for(@education) do |f| %>
  <% if @education.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@education.errors.count, "error") %> prohibited this education from being saved:</h2>

      <ul>
      <% @education.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, 'Course Name' %><br>
    <div class="row">
      <div class="col-xs-6">
        <%= f.text_field :name, class: "form-control monospaced-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :start_date %><br>
    <div class="row">
      <div class="col-xs-6">
        <%= f.date_select :start_date, class: "form-control monospaced-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :end_date %><br>
    <div class="row">
      <div class="col-xs-6">
        <%= f.date_select :end_date, class: "form-control monospaced-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :institution %><br>
    <div class="row">
      <div class="col-xs-6">
        <%= f.text_field :institution, class: "form-control monospaced-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :grade %><br>
    <div class="row">
      <div class="col-xs-6">
        <%= f.text_field :grade, class: "form-control monospaced-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description %><br>
    <div class="row">
      <div class="col-xs-6">
        <%= f.text_area :description, rows: '5', class: "form-control monospaced-control" %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
