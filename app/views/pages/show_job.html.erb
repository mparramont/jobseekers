<div class="row">
  <div class="col-sm-3">
    <h2><%= @job.title %></h2>
    <p><%= @job.user_id %></p>
    <p><b>Keywords:</b><br> <%= @job.keywords %></p>
    <p><b>City:</b><br> <%= @job.city %></p>
    <p><b>Job type:</b> <%= @job.job_length.humanize %>, <%= @job.job_type.humanize %></p>
    <% if @job.suitable_for_graduates %>
      <p><b>Suitable for graduates:</b> ✓</p>
    <% end %>
    <p><b>Category:</b> <%= @job.category.name %></p>
    <p><b>Salary:</b> <%= number_to_currency(@job.salary, unit: '£', precision: 0) %></p>
    <p><b>Reference:</b> <%= @job.reference %></p>
    <h3><small><i class="fa fa-calendar"></i>&nbsp;&nbsp;<%= @job.updated_at.strftime("%Y, %B %-d") %></small></h3>
  </div>
  <div class="col-sm-9"><%= @job.content_html.html_safe %></div>
</div>
