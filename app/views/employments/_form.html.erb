<%= form_for(@employment) do |f| %>
  <% if @employment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employment.errors.count, "error") %> prohibited this employment from being saved:</h2>

      <ul>
      <% @employment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, 'Job Title' %><br>
    <div class="row">
      <div class="col-xs-6">
        <%= f.text_field :title, class: "form-control monospaced-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description %><br>
    <div class="row">
      <div class="col-xs-6">
        <%= f.text_area :description, rows: "5", class: "form-control monospaced-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :key_skills %><br>
    <div class="row">
      <div class="col-xs-6">
        <%= f.text_field :key_skills, class: "form-control monospaced-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :start_date %><br>
    <div class="row">
      <div class="col-xs-6">
        <%= f.date_select :start_date, class: "form-control monospaced-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :end_date %><br>
    <div class="row">
      <div class="col-xs-6">
        <%= f.date_select :end_date, class: "form-control monospaced-control" %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
